.page.guest

    .contain
        width: 0
        padding: 0
        background-color:  $color-pastelblue
        width: 100vw
        height: 100vh

        .menu
            width: 25vw
            height: 100vh
            border-right: 1px solid $color-pastelblue
            float: left
            background-color: $color-white

            .head
                .logo
                    img
                        width: 18vw
                        height: 25vh
                        padding: 20px
                        margin: 0 auto
                        max-width: 100%
                        height: auto
                    text-align: center

            .content
                margin-top: 5vh

                ul
                    text-align: center
                    margin: 0

                    i
                      position: absolute
                      left: 3vw
                      margin-top: 3vh
                      @media $icon
                          display: none

                    li
                        list-style: none
                        height: 8vh
                        line-height: 8vh
                        margin-left: -5vw
                        font-size: 20px
                        &:hover
                            background-color: $color-pastelblue
                            a
                                color: $color-white

                    .actual
                        background-color: $color-pastelblue
                        color: $color-white
                        a
                            color: $color-white


        .right
            width: 70vw
            height: 100vh
            background-color: $color-pastelblue
            float:left

            .text-content
                margin-top: 5vh

                h1
                    margin-top: 5vh
                    color: $color-white
                    font-size: 50px
                h2
                    margin-top: 8vh
                    color: $color-white
                    font-size: 40px
                    margin-bottom: 5vh

                a
                    p
                        color: $color-white
                        text-align: left
                        margin-top: 3vh
                        &:hover
                            color: $color-black
