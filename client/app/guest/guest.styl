.page.guest

    .menu
        width: 25vw
        height: 100vh
        border-right: 1px solid $color-pastelblue
        float: left

        .head
            .logo
                img
                    width: 20vw
                    height: 25vh
                    padding: 20px
                    margin: 0 auto
                    max-width: 100%
                    height: auto
                text-align: center

        .content
            margin-top: 5vh

            ul
                text-align: center
                margin: 0

                li
                    list-style: none
                    height: 8vh
                    line-height: 8vh
                    margin-left: -5vw
                    font-size: 20px
                    &:hover
                        background-color: $color-pastelblue
                        a
                            color: $color-white

                .actual
                    background-color: $color-pastelblue
                    color: $color-white
                    a
                        color: $color-white


    .right
        width: 75vw
        height: 100vh
        background-color: $color-pastelblue
        float:left
