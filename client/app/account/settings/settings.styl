.ng-scope
  background-color: $color-pastelblue
  .page.settings
    background-color: $color-pastelblue
    .contain
        margin: 0
        padding: 0
        background-color: $color-pastelblue
        height: 100vh
        width: 100vw

        .content
            padding: 50px

            input
                width: 30vw

            .bigwhite
                color: $color-white
                font-size: 35px
                padding-top: 2vh
                padding-bottom: 3vh
                margin: 0

            .white
                color: $color-white
                font-size: 20px
                margin: 0
                @media $md
                    font-size: 18px

            .form-group
                margin-top: 2vh

            .btn-default
                margin-left: 0vw
            .btn-lg
              margin-left: 5vw
