.page.login
  .contain.ng-show
    .menu
      .head
        .logo
          img(src="../../assets/images/logo-dently.png")
      .content
        ul
          a(href="/guest")
            li Accueil Dashboard
          a(href="/who-are-we")
            li Qui sommes-nous ?
          a(href="/why-this-site")
            li Pourquoi ce site ?
          a(href="/dam-diagnostic")
            li  Diagnostic DAM
          a(href="/login")
            li.actual  Connexion
          a(href="/signup")
            li  Inscription
          a(href="/contact")
            li  Contact
    .right
        h1.lightblue Formulaire de connexion


        form.form(name='form', ng-submit='vm.login(form)', novalidate='')
          .form-group
            label.blue Email
            input.form-control(type='email', name='email', ng-model='vm.user.email')
          .form-group
            label.blue Password
            input.form-control(type='password', name='password', ng-model='vm.user.password')

          .form-group.has-error
            p.help-block(ng-show='form.email.$error.required && form.password.$error.required && vm.submitted')
              | S'il vous pla√Æt entrez votre mot de passe et identifiant
            p.help-block {{ vm.errors.login }}

          div
            button.btn.btn-inverse.btn-lg.btn-login(type='submit')
              i.fa.fa-sign-in
              span Se connecter

            a.btn.btn-default.btn-lg.btn-register(ui-sref='signup')
              i.fa.fa-user-o
              span S'enregistrer


